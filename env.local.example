# Firebase Configuration
# Found in Firebase Console -> Project Settings -> General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Next-Auth Configuration
# For local development, use http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth (for Login)
# Found in Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Oracle Configuration (MetalPriceAPI)
# Get a free key at metalpriceapi.com
METAL_PRICE_API_KEY=your_metal_price_api_key
